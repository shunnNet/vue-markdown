{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "playground/**/*",
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "Node16",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  }
}